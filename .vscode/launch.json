{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C (MinGW)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/output/HEAPSORT.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Habilita formatação para variáveis",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}